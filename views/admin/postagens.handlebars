<h2>lista de Postagem</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
<div class="card mt-4 px-md-3">
    <div class="card-body">
    <h4>Titulo:{{titulo}}</h4>
    <p>Descricao:{{descricao}}</p>
    <p>{{conteudo}}</p>
    <small>Data:{{data}}</small><br>
    <small>Categoria{{categoria.nome}}</small>
    </div>
    <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success ">editar</button> </a>
     <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">editar</button> </a>
</div>

{{else}}
<p>nenhuma postagem listada</p>
{{/each}}