<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="post" required>
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" required >
            <label for="descricao">Descri√ßao:</label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">conteudo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria">categoria:</label>
            <select name="categoria" id="" class="custom-select" required>
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4">add postagens</button>
        </form>
    </div>
</div>